<h1>Edit Profile</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, required: true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>

  <!-- New fields -->
  <div class="field">
    <%= form.label :height, 'Height (meters)' %>
    <%= form.number_field :height, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :weight, 'Weight (kg)' %>
    <%= form.number_field :weight, step: 0.1 %>
  </div>

  <div class="field">
    <%= form.label :age, 'Age (years)' %>
    <%= form.number_field :age, in: 0..130 %>
  </div>

  <div class="field">
    <%= form.label :nationality %>
    <%= form.text_field :nationality %>
  </div>

  <div class="actions">
    <%= form.submit "Save Changes" %>
  </div>
<% end %>
