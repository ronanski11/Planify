<h1>All Game Events</h1>

<table>
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>Coach</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @game_events.each do |game_event| %>
      <tr>
        <td><%= game_event.event_name %></td>
        <td><%= game_event.event_date.strftime("%d %b %Y %H:%M") %></td>
        <td><%= game_event.location %></td>
        <td><%= game_event.coach&.email || 'No coach assigned' %></td>
        <td>
          <%= link_to 'Show', game_event %>
          <%= link_to 'Edit', edit_game_event_path(game_event) %>
          <%= link_to 'Delete', game_event, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Game Event', new_game_event_path %>
